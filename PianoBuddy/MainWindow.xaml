<Window x:Class="PianoBuddy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PianoBuddy" Height="300" Width="400">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <!-- Devices container -->
            <RowDefinition Height="*" />
            <!-- Note container -->
        </Grid.RowDefinitions>

        <!-- MIDI Devices -->
        <GroupBox Header="MIDI Devices" Grid.Row="0" Margin="0,0,0,10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBlock
                    FontSize="14"
                    TextWrapping="Wrap"
                    Text="{Binding Devices}" />
            </ScrollViewer>
        </GroupBox>

        <!-- Current Note -->
        <GroupBox Header="Current Note" Grid.Row="1">
            <TextBlock
                FontSize="24"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontWeight="Bold"
                Text="{Binding CurrentNote, FallbackValue='No note played yet'}" />
        </GroupBox>
    </Grid>
</Window>
